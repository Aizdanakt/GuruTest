<%= form_with model: @test, class: 'form' do |f| %>
  <div class="mb-3">
    <%= f.label :title, class: 'form-label' %>
    <%= f.text_field :title, class: 'form-control' %>
  </div>

  <div class="mb-3">
    <%= f.label :level, class: 'form-label' %>
    <%= f.number_field :level, class: 'form-control' %>
  </div>

  <div class="mb-3">
    <%= f.label :category_id, class: 'form-label' %>
    <%= f.collection_select :category_id, Category.all, :id, :title, { prompt: true }, class: 'form-select' %>
  </div>

  <%= f.hidden_field :author_id, value: session[:user_id] %>

  <div class="mb-3">
    <%= f.submit 'Submit Test!', class: 'btn btn-success' %>
  </div>
<% end %>
