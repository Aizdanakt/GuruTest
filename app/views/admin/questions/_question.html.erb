<article class="card mt-3" style="border-color: #e3f2fd">
  <div class="card-body">
    <section>
      <p class="my-2">
        <%= question.body %>
      </p>
    </section>

    <%= link_to 'Show', admin_question_path(question), class: 'btn btn-info text-white' %>
    <%= link_to 'Update', edit_admin_question_path(question), class: 'btn btn-info text-white' %>
    <%= link_to "Delete", admin_question_path(question),class: 'btn btn-info text-white',
                data: { turbo_method: :delete, turbo_confirm: 'Are you sure?' } %>
  </div>
</article>
