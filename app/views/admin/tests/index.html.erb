<h1><%= t('.header') %></h1>

<%= render 'shared/errors', resource: @test %>
<%= puts @test.errors.full_messages if @test.present? %>

<table class="table table-striped table-bordered">
  <thead class="table-dark">
  <tr>
    <th scope="col" class="sort-by-title pointer">
      <%= t('.title') %>
      <%= octicon 'arrow-up', class: 'hide' %>
      <%= octicon 'arrow-down', class: 'hide' %>
    </th>
    <th scope="col"><%= t('.level') %></th>
    <th scope="col"><%= t('.number') %></th>
    <th scope="col"><%= t('.actions') %></th>
  </tr>
  </thead>
  <tbody>
  <%= render @tests %>
  </tbody>
</table>
