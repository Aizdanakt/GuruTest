<article class="card mt-3" style="border-color: #e3f2fd">
  <div class="card-body">
    <section>
      <p class="my-2">
        <%= answer.body %>
      </p>
    </section>

    <%= link_to 'Show', admin_answer_path(answer), class: 'btn btn-primary' %>
    <%= link_to 'Update', edit_admin_answer_path(answer), class: 'btn btn-warning' %>
    <%= link_to "Delete", admin_answer_path(answer),class: 'btn btn-danger',
                data: { turbo_method: :delete, turbo_confirm: 'Are you sure?' } %>
  </div>
</article>
