<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-md-6">
          <h2 class="mb-4"><%= t('.header') %></h2>

          <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
            <%= f.hidden_field :reset_password_token %>

            <div class="mb-3">
              <%= f.label :password, t('.new_password'), class: "form-label" %><br />
              <% if @minimum_password_length %>
                <em>(<%= @minimum_password_length %> <%= t('.chapters') %>)</em><br />
              <% end %>
              <%= f.password_field :password, autofocus: true, autocomplete: "new-password", class: "form-control" %>
            </div>

            <div class="mb-3">
              <%= f.label :password_confirmation, t('.confirm_password'), class: "form-label" %><br />
              <div class="password-input">
                <div id="password-match-icon"></div>
                <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control" %>
              </div>
            </div>

            <div class="text-center">
              <%= f.submit t('.submit'), class: "btn btn-primary" %>
            </div>
          <% end %>
    </div>
  </div>
</div>
