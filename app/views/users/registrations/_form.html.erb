<%= form_with model: @user, local: true, html: { class: 'needs-validation' } do |form| %>

  <div class="mb-3">
    <%= form.label :name, class: 'form-label' %>
    <%= form.text_field :name, id: :user_name, class: 'form-control', required: true %>
    <div class="invalid-feedback">
      Please enter a valid name address.
    </div>
  </div>

  <div class="mb-3">
    <%= form.label :surname, class: 'form-label' %>
    <%= form.text_field :surname, id: :user_surname, class: 'form-control', required: true %>
    <div class="invalid-feedback">
      Please enter a valid surname address.
    </div>
  </div>

  <div class="mb-3">
    <%= form.label :email, class: 'form-label' %>
    <%= form.email_field :email, id: :user_email, class: 'form-control', required: true %>
    <div class="invalid-feedback">
      Please enter a valid email address.
    </div>
  </div>

  <div class="mb-3">
    <%= form.label :password, class: 'form-label' %>
    <%= form.password_field :password, id: :user_password, class: 'form-control', required: true %>
    <div class="invalid-feedback">
      Please enter a password.
    </div>
  </div>

  <div class="mb-3">
    <%= form.label :password_confirmation, class: 'form-label' %>
    <%= form.password_field :password_confirmation, id: :user_password_confirmation, class: 'form-control', required: true %>
    <div class="invalid-feedback">
      Please confirm your password.
    </div>
  </div>

  <div class="mb-3">
    <%= form.submit 'Register', class: 'btn btn-primary' %>
  </div>

<% end %>
