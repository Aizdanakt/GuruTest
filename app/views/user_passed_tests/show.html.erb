<h1>Passing the <%= @user_passed_test.test.title %> Test</h1>

<div style="margin-bottom: 10px">
  <p>
    <b><%= @user_passed_test.current_question.body %></b>
  </p>
  <p>
    Всего вопросов: <b><%= @user_passed_test.test.questions.size %></b>
  </p>
  <p>
    Номер вопроса: <b><%= @user_passed_test.current_question.id %></b>
  </p>
</div>

<%= form_with url: user_passed_test_path(@user_passed_test), local: false, method: :put do |form| %>
  <%= form.collection_check_boxes :answer_ids, @user_passed_test.current_question.answers, :id, :body, include_hidden: false do |b| %>
    <p>
      <%= b.check_box id: "answer_ids_#{b.object.id}" %>
      <%= b.label %>
    </p>
  <% end %>

  <p><%= form.submit 'Next', class: 'btn btn-primary' %></p>
<% end %>
