<% if user_signed_in? %>
  <li class="nav-item">
    <%= link_to 'Logout', destroy_user_session_path, data: { turbo_method: :delete, turbo_confirm: 'Are you sure?' }, class: 'nav-link' %>
  </li>
<% else %>
  <li class="nav-item">
    <%= link_to 'Login', user_session_path, method: :delete, class: 'nav-link' %>
  </li>
  <li class="nav-item">
    <%= link_to 'Signup', new_user_registration_path, method: :delete, class: 'nav-link' %>
  </li>
<% end %>
